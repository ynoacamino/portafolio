---
import H1 from "./H1.astro";
import HoverButton from '../components/react/HoverButton.jsx';
import { learning } from "../data/learning";
---

<div class="flex flex-col items-center my-20">
  <H1 id="tecnologias">APRENDIENDO</H1>
  <div class="flex gap-x-6 justify-center items-center max-w-5xl w-full my-10 mt-16 gap-y-20 flex-wrap">
    {
      learning.map((t) => (
        <HoverButton
          client:load
          content={t.name}
          src={t.src}
          alt={t.name}
        />
      ))
    }
  </div>
</div>