---
import H1 from "./H1.astro";
import Card from "./Card.astro";
import { frontend, backend } from "../data/projects";
---

<div class="flex flex-col items-center my-20">
  <H1 id="proyectos">PROYECTOS</H1>
  <h2 class="text-center text-4xl md:text-5xl font-semibold mt-8">Frontend</h2>
  <div
    class="grid grid-cols-1 lg:grid-cols-2 gap-8 justify-items-center max-w-5xl w-full my-10"
  >
    {
      frontend.map((w) => (
        <Card
          name={w.name}
          github={w.github}
          image={w.image}
          link={w.link}
          stack={w.stack}
          url={w.url}
        />
      ))
    }
  </div>
  <h2 class="text-center text-4xl md:text-5xl font-semibold mt-14">Backend</h2>
  <div
    class="grid grid-cols-1 lg:grid-cols-2 gap-8 justify-items-center max-w-5xl w-full my-10"
  >
    {
      backend.map((w) => (
        <Card
          name={w.name}
          github={w.github}
          image={""}
          link={""}
          stack={w.stack}
          url={w.url}
        />
      ))
    }
  </div>
</div>
