---
interface Props {
  href: string;
  target: boolean;
  noWidth?: boolean;
  classAdd?: String;
}

const { href, target, noWidth, classAdd } = Astro.props;
---

<a
  href={href}
  target={target ? "_blank" : "_self"}
  class={`min-w-fit hover:cursor-pointer hover:shadow-sm bg-gradient-to-r from-pink-600
   via-red-500 to-yellow-500 rounded-md ${classAdd} ${noWidth ? "" : "w-full"}
   `}
  rel="noreferrer"
>
  <div
    class="w-full first-letter:flex items-center justify-center gap-4 font-semibold text-base text-white bg-black hover:bg-transparent transition-all px-4 py-2 dark:bg-zinc-700 dark:hover:bg-transparent rounded-md flex"
  >
    <slot />
  </div>
</a>
